</div>

<div class="mui-content">
  <ul class="mui-table-view mui-grid-view mui-grid-9">
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <%= link_to systems_path do  %>
        <span class="mui-icon xc-icon"><%= image_tag("setting.png")%></span>
        <div class="mui-media-body">系统状态</div>
      <% end %>
    </li>
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <%= link_to alerts_path do  %>
        <span class="mui-icon xc-icon"><%= image_tag("warning.png")%></span>
        <div class="mui-media-body">告警信息</div>
      <% end %>
    </li>
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <%= link_to works_path do  %>
        <span class="mui-icon xc-icon"><%= image_tag("arrange.png")%></span>
        <div class="mui-media-body">工作安排</div>
      <% end %>
    </li>
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <%= link_to effects_path do %>
        <span class="mui-icon xc-icon"><%= image_tag("sun.png")%></span>
        <div class="mui-media-body">能效管理</div>
      <% end %>
    </li>
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <%= link_to its_path do  %>
        <span class="mui-icon xc-icon"><%= image_tag("phone.png")%></span>
        <div class="mui-media-body">IT管理</div>
      <% end %>
    </li>
    <li class="mui-table-view-cell mui-media mui-col-xs-4 mui-col-sm-3">
      <a href="#">
        <span class="mui-icon xc-icon"><%= image_tag("more.png")%></span>
        <div class="mui-media-body">其他</div>
      </a>
    </li>
  </ul>
</div>

<script type="text/javascript">
  function link(href) {
    window.location.href=href;
  }
  $(function(){
    mui('.mui-table-view-cell').on('tap', 'a', function(){
      var _href = $(this).attr('href');
      link(_href);
    });
  });
</script>
