<script type="text/javascript" charset="utf-8">
  mui.init({
    swipeBack:true //启用右滑关闭功能
  });
  var slider = mui("#slider");
  document.getElementById("switch").addEventListener('toggle', function(e) {
    if (e.detail.isActive) {
      slider.slider({
        interval: 5000
      });
    } else {
      slider.slider({
        interval: 0
      });
    }
  });
</script>